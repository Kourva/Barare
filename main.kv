# Quine McCluskey solver
<QMCSolverScreen>

    # Background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'

    # Float layout
    FloatLayout:

        # Action bar
        ActionBar:
            pos_hint: {'top':1}
            background_color: "#444444"
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: '[b][font=Barare]Quine McCluskey Solver[/font][/b]'
                    with_previous: False
                    markup: True
                    app_icon: "icon.png"

        # Text
        Label:
            pos_hint: {'center_y': 0.8}
            font_name: "RobotoMono-Regular"
            markup: True
            halign: "center"
            color: "#FF0000"
            text: "[b]Enter minterms and don't cares[/b]"

        TextInput:
            id: minterms
            size_hint: .5, None
            multiline: False
            height: "30dp"
            halign: "center"
            background_color: "#000000"
            foreground_color: "#FFFFFF"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            hint_text: "Minterms"

        TextInput:
            id: dontcares
            size_hint: .5, None
            multiline: False
            height: "30dp"
            halign: "center"
            background_color: "#000000"
            foreground_color: "#FFFFFF"
            pos_hint: {"center_x": 0.5, "center_y": 0.64}
            hint_text: "don't cares (If any)"

        # Quit button
        Button:
            font_name: 'Barare'
            size_hint: (0.5, 0.05)
            background_color: "#111111"
            foreground_color: "#000000"
            bold: True
            pos_hint: {"bottom":1, "right":1}
            text: 'Quit'
            on_press:
                exit()

        # Output
        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint: (0.8, 0.40)
            pos_hint: {"center_y":0.3, "center_x":0.5}

            Label:
                id: qmcresult
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                pos_hint: {'center_y': 0.5}
                font_name: "RobotoMono-Regular"
                markup: True
                halign: "center"
                color: "#FFFFFF"
                text: "[b][/b]"

        # Login menu button
        Button:
            font_name: 'Barare'
            size_hint: (0.5, 0.05)
            background_color: "#111111"
            foreground_color: "#000000"
            bold: True
            pos_hint: {"bottom":1, "left":1}
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'GuestMenu'



        # Solve button
        Button:
            size_hint: .5, None
            height: "30dp"
            background_color: "#222222"
            foreground_color: "#FFFFFF"
            text: "Solve"
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            on_press:
                root.solve(minterms, dontcares, qmcresult)
